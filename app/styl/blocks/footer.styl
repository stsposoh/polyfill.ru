.footer
    padding 50px 0
    text-align center
    background-color bg_black

    &__on-top
        margin auto
        margin-bottom 15px
        margin-top 0
        width 60px
        height 34px
        background url(/img/top.png) no-repeat center
        cursor pointer

    &__social
        width 30px
        margin 0 10px
    p
        margin-bottom: 20px
        margin-top 15px
        font-size .9rem

    a
        color inherit
        text-decoration none

        @media mq_desktop
            &:hover
                color white