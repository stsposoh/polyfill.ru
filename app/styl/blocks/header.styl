.header

    &__paralax
        overflow: hidden;
        width: 100%;
        margin: 0 auto;
        height: 95vh;
        position: relative;

        &-man
            position: absolute;
            right: 0;
            width: 31%;
            bottom: 0;
            z-index: 5;

        &-bg1
            position: absolute;
            bottom: 0;
            left: 27%;
            width: 39%;
            z-index: 2;

        &-bg2
            width: 100%;
            position: absolute;
            bottom: 0;
            z-index: 3;

        &-bg3
            width: 100%;
            position: absolute;
            bottom: 0;
            z-index: 6;

    &__stars
    &__twinkling
    &__clouds
        position:absolute;
        top:0;
        left:0;
        right:0;
        bottom:0;
        width:100%;
        height:100%;
        display:block;

    &__stars
        background:#000 url(/img/stars.png) repeat top center;
        z-index:0;

    &__twinkling
        background:transparent url(/img/twinkling.png) repeat top center;
        z-index:1;
        animation:move-twink-back 200s linear infinite;

    &__clouds
        background:transparent url(/img/clouds.png) repeat top center;
        z-index:3;
        animation:move-clouds-back 200s linear infinite;









